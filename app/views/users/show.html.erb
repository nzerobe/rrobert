<h1><%= @user.name %> Screen </h1>
<p>Title: <%= @user.title %></p>
<p>Contents: <%= @user.content %></p>

<%= form_with(model: @user, local: true) do |form| %>

  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

